<h1> sign up </h1>

<%= form_for @user do |f| %>

    <div>
       <%= f.label :name %>
       <%= f.text_field :name, placeholder: ". . ." %>
    </div>

    <div>
       <%= f.label :city %>
       <%= f.text_field :city, placeholder: ". . ."   %>
    </div>

    <div>
       <%= f.label :description %>
       <%= f.text_area :description, rows: 10  %>
    </div>

    <%= f.submit (@user.new_record? ? "Create" : "Update") %>

<% end %>
